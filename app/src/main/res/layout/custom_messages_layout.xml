<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_profile_image"
        android:layout_alignParentStart="true"
        android:layout_width="50dp"
        android:src="@drawable/ic_person_24dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/receiver_message"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/receiver_profile_image"
        android:layout_width="wrap_content"
        android:text="Receiver Message"
        android:background="@drawable/receiver_messages_layout"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/sender_message"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:text="Receiver Message"
        android:background="@drawable/sender_messages_layout"
        android:layout_height="wrap_content"/>
</RelativeLayout>